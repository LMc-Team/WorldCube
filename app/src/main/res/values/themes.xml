<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WorldCube" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item><!--AppBar背景色(ActionBar)背景-->
        <item name="colorPrimaryDark">@color/colorPrimaryVariant</item><!--colorPrimaryDark  状态栏颜色-->
        <item name="colorAccent">@color/colorAccent</item><!--colorAccent :ActionBar上的内容颜色such as titleColor-->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.WorldCube.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item><!--AppBar背景色(ActionBar)背景-->
        <item name="colorPrimaryDark">@color/colorPrimaryVariant</item><!--colorPrimaryDark  状态栏颜色-->
        <item name="colorAccent">@color/colorAccent</item><!--colorAccent :ActionBar上的内容颜色such as titleColor-->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>